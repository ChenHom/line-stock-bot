# LINE Bot Configuration
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_CHANNEL_SECRET=your_channel_secret_here

# Upstash Redis Configuration
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token_here

# FinMind API Configuration (Required for fallback quote provider)
FINMIND_TOKEN=your_finmind_token_here

# Optional: Debug mode (set to 'True' to skip signature verification)
DEBUG=False

# Optional: Quote provider selection (default: twse)
# Options: twse, finmind
QUOTE_PRIMARY_PROVIDER=twse

# Optional: News provider selection (default: google)
# Options: google, yahoo
NEWS_PRIMARY_PROVIDER=google

# Optional: Provider timeout in milliseconds (default: 2000)
PROVIDER_TIMEOUT_MS=2000

# Optional: Logging level (default: info)
# Options: debug, info, warn, error
LOG_LEVEL=info

# Optional: Enable monitoring and telemetry
MONITORING_ENABLED=false

# Optional: Environment (development | production)
NODE_ENV=development
